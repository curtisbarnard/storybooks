<h1>Dashboard</h1>
<h2>Welcome {{name}}</h2>
<p>Here are your stories</p>
{{#if stories}}
  <table class='striped'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href='/stories/{{_id}}'>{{title}}</a></td>
          <td>{{formatDate createdAt 'MMMM Do YYYY'}}</td>
          <td><span class='dash-status'>{{status}}</span></td>
          <td>
            <a href="/stories/edit/{{_id}}" class="btn btn-float">
              <i class="fas fa-edit"></i>
            </a>
            <form action="/stories/delete/{{_id}}" method="GET" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn red" type="submit">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created any stories yet</p>
{{/if}}